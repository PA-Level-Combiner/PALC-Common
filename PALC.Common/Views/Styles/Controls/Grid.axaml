<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Grid RowDefinitions="10, 20, 30, 40"
				  ColumnDefinitions="10, 20, 30, 40"
				  ShowGridLines="True"/>
        </Border>
    </Design.PreviewWith>

    <Style Selector="Grid">
		<Setter Property="ShowGridLines"
				Value="False"/>
	</Style>
</Styles>
