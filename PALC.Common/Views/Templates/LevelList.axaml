<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:PALC.Common.Views.Templates">
	<Design.PreviewWith>
		<controls:LevelList Height="300" Width="600" />
	</Design.PreviewWith>
	

	<Style Selector="controls|LevelList">
		<Setter Property="Template">
			<ControlTemplate TargetType="{x:Type controls:LevelList}">
				<Grid RowDefinitions="*"
					  ColumnDefinitions="3*, *">
					
					<ContentPresenter Content="{TemplateBinding ListBox}"/>

					<Grid Grid.Column="1"
						  RowDefinitions="*, *"
						  ColumnDefinitions="*">

						<Button Grid.Row="0"
								Content="Add Level..."
								Command="{TemplateBinding AddItemCommand}"/>

						<Button Grid.Row="1"
								Content="Delete Level"
								Command="{Binding DeleteItemCommand, RelativeSource={RelativeSource TemplatedParent}}"/>
					</Grid>

				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
